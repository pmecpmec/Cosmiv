# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Database
USE_POSTGRES=true
POSTGRES_DSN=postgresql+psycopg://user:password@host:5432/aiditor
POSTGRES_USER=aiditor
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=aiditor

# Storage (S3-compatible)
USE_OBJECT_STORAGE=true
S3_ENDPOINT_URL=https://s3.amazonaws.com
# Or for Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
S3_REGION=us-east-1
S3_ACCESS_KEY=YOUR_ACCESS_KEY
S3_SECRET_KEY=YOUR_SECRET_KEY
S3_BUCKET=aiditor-prod
S3_PUBLIC_BASE_URL=https://your-cdn-domain.com

# Redis
REDIS_URL=redis://redis-host:6379/0

# Authentication
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_CREATOR=price_...

# Application
BASE_URL=https://yourdomain.com
LOG_LEVEL=INFO
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Social Media APIs (set to true when ready)
TIKTOK_API_ENABLED=false
YOUTUBE_API_ENABLED=false
INSTAGRAM_API_ENABLED=false

# Gaming Platform APIs (set to true when ready)
STEAM_API_ENABLED=false
STEAM_API_KEY=YOUR_STEAM_API_KEY
XBOX_API_ENABLED=false
XBOX_CLIENT_ID=YOUR_XBOX_CLIENT_ID
XBOX_CLIENT_SECRET=YOUR_XBOX_CLIENT_SECRET
PLAYSTATION_API_ENABLED=false
PLAYSTATION_CLIENT_ID=YOUR_PSN_CLIENT_ID
PLAYSTATION_CLIENT_SECRET=YOUR_PSN_CLIENT_SECRET
NINTENDO_API_ENABLED=false
NINTENDO_CLIENT_ID=YOUR_NINTENDO_CLIENT_ID
NINTENDO_CLIENT_SECRET=YOUR_NINTENDO_CLIENT_SECRET

# Feature Flags
USE_HIGHLIGHT_MODEL=false
FREEMIUM_MAX_DURATION=60
WATERMARK_TEXT=Aiditor Free

# AI Services (LLM)
# Provider: openai, anthropic, or local
AI_PROVIDER=openai
AI_ENABLED=true
AI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# AI Music Generation
# MusicGen (Meta's model via Hugging Face) - requires torch
MUSICGEN_ENABLED=false
# Suno API (paid service)
SUNO_API_ENABLED=false
SUNO_API_KEY=your_suno_api_key
SUNO_API_URL=https://api.suno.ai/v1
# Mubert API (paid service)
MUBERT_API_ENABLED=false
MUBERT_API_KEY=your_mubert_api_key
MUBERT_API_URL=https://api.mubert.com/v2
