  "scraping_config": {
    "max_pages_per_site": 10,
    "respect_robots_txt": true,
    "delay_between_requests": 2.0,
    "user_agent": "Cosmiv-FrontendLearner/1.0 (+https://cosmiv.com/bot)",
    "timeout_seconds": 30,
    "max_retries": 3,
    "save_screenshots": true,
    "extract_css": true,
    "extract_js": false
  },
  "cosmiv_brand_filters": {
    "preferred_colors": ["#0f0f1a", "#1a1a2e", "#16213e", "#ff0080", "#00ffff", "#667eea", "#764ba2"],
    "preferred_styles": ["glassmorphism", "neon", "gradient", "dark", "space", "cosmic"],
    "reject_styles": ["minimal", "pastel", "light", "corporate"]
  }
