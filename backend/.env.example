# ============================================
# AIDIT Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# --------------------------------------------
# Feature Flags
# --------------------------------------------
USE_POSTGRES=false
USE_OBJECT_STORAGE=false
USE_HIGHLIGHT_MODEL=false

# --------------------------------------------
# Freemium Configuration
# --------------------------------------------
FREEMIUM_MAX_DURATION=60
WATERMARK_TEXT="Aiditor Free"

# --------------------------------------------
# Database Configuration (Team Secret)
# --------------------------------------------
# SQLite (default for development)
DB_PATH=/app/storage/db.sqlite3

# PostgreSQL (when USE_POSTGRES=true)
POSTGRES_DSN=postgresql+psycopg://USERNAME:PASSWORD@HOST:PORT/DATABASE
# Example: postgresql+psycopg://postgres:postgres@postgres:5432/aiditor

# --------------------------------------------
# Redis/Broker Configuration (Team Secret)
# --------------------------------------------
REDIS_URL=redis://HOST:PORT/DB
# Example: redis://redis:6379/0

# --------------------------------------------
# Object Storage (S3/MinIO) (Team Secret)
# --------------------------------------------
S3_ENDPOINT_URL=http://HOST:PORT
S3_REGION=us-east-1
S3_ACCESS_KEY=YOUR_ACCESS_KEY_HERE
S3_SECRET_KEY=YOUR_SECRET_KEY_HERE
S3_BUCKET=aiditor
S3_PUBLIC_BASE_URL=http://HOST:PORT/BUCKET

# Development defaults (MinIO):
# S3_ENDPOINT_URL=http://minio:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_PUBLIC_BASE_URL=http://localhost:9000/aiditor

# --------------------------------------------
# Local Storage (Team Secret)
# --------------------------------------------
STORAGE_ROOT=/app/storage

# --------------------------------------------
# Billing & Payments (Team Secret)
# --------------------------------------------
# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXX

# Stripe Product/Price IDs
STRIPE_PRO_PRICE_ID=price_XXXXXXXXXXXXXXXXXXXXX

# --------------------------------------------
# Authentication & Security (Team Secret)
# --------------------------------------------
# JWT Configuration
JWT_SECRET_KEY=GENERATE_RANDOM_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Secret
SESSION_SECRET=GENERATE_RANDOM_SECRET_HERE

# --------------------------------------------
# Gaming Platform APIs (User Secret)
# --------------------------------------------
# Steam API
STEAM_API_KEY=YOUR_STEAM_API_KEY_HERE
STEAM_WEB_API_KEY=YOUR_STEAM_WEB_API_KEY_HERE

# Xbox Live API
XBOX_CLIENT_ID=YOUR_XBOX_CLIENT_ID_HERE
XBOX_CLIENT_SECRET=YOUR_XBOX_CLIENT_SECRET_HERE

# PlayStation Network API
PSN_NPSSO_TOKEN=YOUR_PSN_NPSSO_TOKEN_HERE

# Nintendo Switch API
NINTENDO_SESSION_TOKEN=YOUR_NINTENDO_SESSION_TOKEN_HERE

# --------------------------------------------
# AI/ML Services (User Secret)
# --------------------------------------------
# OpenAI API (for potential future features)
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXX

# Whisper/Speech-to-Text
WHISPER_MODEL_PATH=/app/models/whisper

# --------------------------------------------
# Email/Notifications (Team Secret)
# --------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=noreply@aiditor.com

# --------------------------------------------
# Monitoring & Analytics (Team Secret)
# --------------------------------------------
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX
ANALYTICS_API_KEY=YOUR_ANALYTICS_KEY_HERE

# --------------------------------------------
# Development/Debug
# --------------------------------------------
DEBUG=false
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
