# AIDIT Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control!

# Environment
ENVIRONMENT=development  # development, staging, production

# Security - JWT Authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=changeme_generate_a_secure_random_string_at_least_64_characters_long

# Database
USE_POSTGRES=false
DB_PATH=/app/storage/db.sqlite3
POSTGRES_DSN=postgresql+psycopg://postgres:CHANGEME@postgres:5432/aiditor

# Object Storage (S3/MinIO)
USE_OBJECT_STORAGE=false
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=CHANGEME
S3_SECRET_KEY=CHANGEME
S3_BUCKET=aiditor
S3_PUBLIC_BASE_URL=http://localhost:9000/aiditor

# Redis/Celery
REDIS_URL=redis://redis:6379/0

# Feature Flags
USE_HIGHLIGHT_MODEL=false

# Freemium Limits
FREEMIUM_MAX_DURATION=60
WATERMARK_TEXT=Aiditor Free

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Allowed hosts for production (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Token Encryption (for storing OAuth tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=changeme_generate_with_fernet

# External API Keys (when integrating GoPlus, QuickIntel, etc.)
# GOPLUS_API_KEY=
# QUICKINTEL_API_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
